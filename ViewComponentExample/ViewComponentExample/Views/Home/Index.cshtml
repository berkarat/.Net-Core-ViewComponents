@model ProductCategory

@{
    ViewData["Title"] = "Home Page";
}

@await Component.InvokeAsync("CategoryMenu")

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th>Name</th>
            <th>Price</th>
    </thead>
    <tbody>
        @{var i = 0;

        }
        <tr>

            @foreach (var item in Model.Products)
            {
            <tr>
                <th scope="row">@i</th>
                <td>@item.Name</td>
                <td>@item.Price</td>
            </tr>
            i++;
        }


        </tbody>
    </table>





